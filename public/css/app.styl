@import "_nib"
@import "_html5_clean_up"
@import "_helpers"
@import "_form"

body, html
  color #222
  background-color #fafafa
  font-size 1em
  font-family 'Open Sans', sans-serif
  line-height 1.4
  height 100%
  width 100%

section, article
  height: 100%
  width 100%

article:not(:first-child)
  display flex
  justify-content center
  flex-wrap wrap

  h1
    padding-top 45px
    flex 0 1 100%
    max-width 80%

  .flex
    content-full-align()
    flex-direction row
    height: 100%
    width: 100%
    max-width 80%

  .stretch
    align-items stretch

  .center
    align-items center

  .center-self
    align-self center

  .text-right
    text-align right

  .text-left
    text-align left

  .padding-top
    padding-top 45px

  .padding-right
    padding-right 20px

  .padding-left
    padding-left 20px

