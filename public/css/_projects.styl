$anim-skew-time = .5s
$anim-sayings-time = .2s
$items-width = 40%

#projects-wrapper
  background-color $bg-color-projects

#projects .flex-grid
  padding: 0

  .flex-grid-item:before
    content ''
    position absolute
    top 0
    left -200%
    width 150%
    height 100%
    transform skew(-20deg, 0)
    background-color $bg-color-projects-skew
    z-index z-index-2
    transition-property left
    transition-duration $anim-skew-time

  .flex-grid-item
    text-decoration none
    width $items-width
    flex 1 $items-width
    content-full-align()
    flex-direction column
    position relative
    color $text-color-projects
    overflow hidden
    margin 0
    padding 0

    *:not(img)
      z-index z-index-3
      opacity 0
      transition opacity $anim-sayings-time ease-out
      transition-delay $anim-skew-time * .6

    img
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      z-index z-index-1

  .flex-grid-item:hover
    *:not(img)
      opacity 1

    &:before
      left -20%


  @media all and (max-width: medium-screen)
    margin-top 15px

    .flex-grid-item
      flex 1 0%
      width 100%
      margin 0 !important
      padding 0 !important

      &:first-child
        margin-top 30px

      &:before
        left -20%

      *:not(img)
        opacity 1
