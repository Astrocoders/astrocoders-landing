#contact-wrapper
  position relative
  width 100%
  height 100%
  color: #fff
  
  .contact-item
    position absolute
    top 0
    left 0
  
  // Mask
  &:before
    content: ''
    z-index 1
    position absolute
    top 0
    left 0
    background-color rgba(0,0,0,.5)
    width 100%
    height 100%
    
  #ytplayer
    z-index 0
  
  #contact
    z-index 1
    float left
    align-items center
    justify-content center
    
    .content
      width 50%