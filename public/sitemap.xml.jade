
- var filter = /(\.html$)/;
- var replace = /(\.html$)|(^index\.html$)/;
- var date = new Date().toISOString()

mixin tree(head, tail)
  for val, key in head
    if key !== '.git' && key !== '_data'
      if key == '_contents'
        each file in val
          if filter.test(file) && !/^404\.html/.test(file) && !/mobile/.test(tail)
            - file = file.replace(replace, "");
            - depth = tail.split("/").length
            if (file == "" && depth == 2)
              url
                loc https://astrocoders.com#{ tail + file }
                lastmod #{date}
                changefreq weekly
                priority 100
            else
              url
                loc https://astrocoders.com#{ tail + file }
                lastmod #{date}
                changefreq weekly
                priority= (100 - ((depth - 1) * 7))


      else
        mixin tree(val, tail + key + "/")

!!! xml
urlset(xmlns="http://www.sitemaps.org/schemas/sitemap/0.9", xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance", xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd")
  mixin tree(public, "/")
