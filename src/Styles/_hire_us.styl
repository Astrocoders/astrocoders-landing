#contact-wrapper.mobile
  &:before
    background-image none

#contact-wrapper
  position relative
  width 100%
  height 140%
  color $text-color-services

  .contact-item
    position absolute
    top 0
    left 0

  // Mask
  &:before
    content: ''
    z-index 1
    position absolute
    top 0
    left 0
    background-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUCAMAAAC6V+0/AAAABlBMVEX///8AAABVwtN+AAAAAnRSTlMAmf9A5tgAAAASSURBVHgBY2DEArGCgVI5qhIAV/gAZQ+MArcAAAAASUVORK5CYII=")
    background-color $bg-color-hire-us-mask
    width 100%
    height 100%

  #hire-us-video
    z-index 0
    pointer-events none
    height 100%
    width 100%
    overflow-x hidden
    align-items center
    justify-content center

    & > video
      width auto
      height 100%
      min-width 100%

  #contact
    z-index 1
    float left
    align-items center
    justify-content center

    .content
      width 50%

      @media all and (max-width: medium-screen)
        width 90%
        margin-top 40px

  form
    input, textarea, button
      outline none

    button:before
      background-color $bg-color-hire-us-submit-btn

    textarea
      height 200px

  input::-webkit-input-placeholder, textarea::-webkit-input-placeholder
    color #fff

