#hero-wrapper
  position relative
  width 100%
  height 100%
  background-color $bg-color-hero

  #particles
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  .hero
    width 100%
    height 100%
    content-full-align()

    .content
      text-align center
      color $text-color-hero

      img
        width 200px

        @media (max-width: medium-screen)
          width 100px

      h1
        text-transform uppercase
        letter-spacing 15px

    .logo
      animation spin 1s infinite linear


@keyframes spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
